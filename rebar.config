%% -*- mode: erlang -*-
{erl_opts, [
    debug_info,
    warnings_as_errors,
    {platform_define, "^[0-9]+", namespaced_types}
]}.

{deps, [
    {protobuffs, "0.8.*", {git, "https://github.com/basho/erlang_protobuffs.git", {tag, "0.8.4"}}},
    {hamcrest, "0.3.*", {git, "https://github.com/basho/hamcrest-erlang.git", {tag, "0.3.0-basho"}}}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    deprecated_function_calls,
    deprecated_functions,
    locals_not_used
]}.

{eunit_opts, [verbose]}.

{plugins, [riak_pb_msgcodegen]}.

{plugin_dir, "plugins"}.

%% Fixes attempted removal of riak_pb directory by rebar_escripter
{escript_name, "doesnothavescript"}.

{edoc_opts, [{preprocess, true}]}.
