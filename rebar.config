%% -*- mode: erlang -*-
{erl_opts, [
    debug_info,
    warnings_as_errors,
    {platform_define, "^[0-9]+", namespaced_types}
]}.

{deps, [
    {hamcrest, "0.4.*", {git, "https://github.com/basho/hamcrest-erlang.git", {tag, "0.4.1"}}}
]}.

{profiles,
   [{test, 
       [{erl_opts, [{d, 'TEST'}]}]},
    {eqc, 
       [{erl_opts, [{d, 'EQC'}, {parse_transform, eqc_cover}]}]}
]}.

{xref_checks, [
    undefined_function_calls,
    undefined_functions,
    deprecated_function_calls,
    deprecated_functions,
    locals_not_used
]}.

{eunit_opts, [verbose]}.

{proto_opts, [
	{src_dirs, ["use-protogen-makefile-target-instead!"]}
]}.

%% Fixes attempted removal of riak_pb directory by rebar_escripter
{escript_name, "doesnothavescript"}.

{edoc_opts, [{preprocess, true}]}.
